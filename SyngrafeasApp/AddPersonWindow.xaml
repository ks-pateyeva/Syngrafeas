<Window x:Class="SyngrafeasApp.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyngrafeasApp"
        mc:Ignorable="d"
        Title="Связать объекты" Height="211" Width="294" Icon="Resources/edit.png">
    <Grid Margin="0,0,0,0.333" HorizontalAlignment="Left" Width="284">
        <ListBox x:Name="ContentListBox" ItemsSource="{Binding listBox}" HorizontalAlignment="Left" Height="155" VerticalAlignment="Top" Width="119" Margin="10,10,0,0"/>
        <ComboBox x:Name="ChoosenComboBox" ItemsSource="{Binding IDstrings}" HorizontalAlignment="Left" Margin="150,45,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="150,88,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Button x:Name="AcceptButton" Content="Принять" HorizontalAlignment="Left" Margin="150,145,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.344,0.25" Click="AcceptButton_Click"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="150,113,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
    </Grid>
</Window>
